@page
@model BlogSpot.Web.Pages.Posts.CreateModalModel
@using BlogSpot.Localization
@using BlogSpot.Web.Pages.Posts
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<BlogSpotResource> L
@{
	Layout = null;
}

<form abp-model="Post" asp-page="/Posts/CreateModal">
	<abp-modal>
		<abp-modal-header title="@L["NewPost"].Value"></abp-modal-header>
		<abp-modal-body>
			<abp-modal-body>
            <abp-input asp-for="Post.Title"></abp-input>
			<label>Content</label>
            <textarea rows="4" cols="55" maxlength="350" style="resize: none" asp-for="Post.Content"/>
			<abp-select asp-for="Post.Tags"></abp-select>
            <abp-input asp-for="Post.PublishDate"></abp-input>
            </abp-modal-body>
		</abp-modal-body>
		<abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
	</abp-modal>	
</form>
