@page
@using BlogSpot.Localization
@using BlogSpot.Web.Pages.Posts
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model BlogSpot.Web.Pages.Posts.EditModalModel
@inject IStringLocalizer<BlogSpotResource> L
@{
	Layout = null;
}

<abp-dynamic-form abp-model="Post" asp-page="/Posts/EditModal">
    <abp-modal>
	    <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
            <abp-modal-body>
                <abp-input type="hidden" asp-for=Id />
                <abp-form-content />
            </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>	
</abp-dynamic-form>
